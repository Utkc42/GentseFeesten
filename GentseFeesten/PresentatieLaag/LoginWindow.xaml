<Window x:Class="PresentatieLaag.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentatieLaag"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="315">
    <Grid Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Geef uw id in: " HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBox Grid.Row="1" Name="idTxt" Margin="5" VerticalAlignment="Top"/>
        <Button Grid.Row="2" Content="login" Margin="10,10,10,10" Click="Button_Click" FontSize="14" FontWeight="Bold"/>
    </Grid>
</Window>
